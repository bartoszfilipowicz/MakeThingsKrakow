<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/pressed_button_background_color"/>
            <stroke
                android:width="@dimen/button_bg_stroke_width"
                android:color="@color/pressed_button_stroke"/>
            <corners
                android:radius="@dimen/button_bg_corner_radius"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@color/focused_button_background_color"/>
            <stroke
                android:width="@dimen/button_bg_stroke_width"
                android:color="@color/focused_button_stroke"/>
            <corners
                android:radius="@dimen/button_bg_corner_radius"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/normal_button_background_color"/>
            <stroke
                android:width="@dimen/button_bg_stroke_width"
                android:color="@color/normal_button_stroke"/>
            <corners
                android:radius="@dimen/button_bg_corner_radius"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>